# This config is used for development purposes.
localhost {
    root * /srv/app/components/orkestra-framework/public
	encode gzip
	php_fastcgi php:9000
	file_server
	log {
		output file /srv/app/components/orkestra-framework/var/log/caddy/access.log {
			roll_keep_for 48h # 90 days
		}
	}
	tls /srv/tls/localhost.pem /srv/tls/localhost-key.pem
}

