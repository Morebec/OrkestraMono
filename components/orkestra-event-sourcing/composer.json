        {
            "name": "jwillp",
            "email": "jwilliam.perreault@morebec.com"
        }
    ],
    "require": {
        "php": ">=7.3",
        "ramsey/uuid": "^4.1",
        "morebec/orkestra-datetime": "^2.2",
        "morebec/orkestra-enum": "^2.2",
        "morebec/orkestra-modeling": "^2.2",
        "morebec/orkestra-messaging": "^2.2",
        "morebec/orkestra-normalization": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "ext-dom": "*",
        "phpstan/phpstan": "^0.12.7",
        "friendsofphp/php-cs-fixer": "^2.16",
        "symfony/var-dumper": "5.*"
    },
    "autoload": {
        "psr-4": {
            "Morebec\\Orkestra\\EventSourcing\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Morebec\\Orkestra\\EventSourcing\\": "tests"
